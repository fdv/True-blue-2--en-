<% unless sidebar.tags.blank? -%>
<h3><%= _("Tags")%></h3>
<div class="sidebarelement">
<p>Read articles published under.</p>
<p style="overflow:hidden; font-size: 14px;">
<% sidebar.tags.each do |tag| -%>
<span style="font-size:<%= sidebar.sizes[tag] %>%"><%= link_to tag.display_name, "#{tag.permalink_url}/" %></span>,
<% end -%>
</p>
</div>
<% end %>
