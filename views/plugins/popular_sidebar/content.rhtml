<div id="secondfooter">
<% unless sidebar.bestof.blank? -%>
<div id="populars">
<h3>Popular articles</h3>
<ul>
<% for article in sidebar.bestof -%>
  <li><%= link_to h(article.title), "#{this_blog.base_url}/#{article.permalink}.html"  %> <%= article.comments.count %> <img src="http://t37.net/images/comment.gif" alt="<%= article.published_comments.size %> comments" title="<%= article.published_comments.size %> comments" /></li>
<% end -%>
</ul>
</div>
<% end %>
