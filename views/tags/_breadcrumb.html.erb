<%
breadcrumb = "#{link_to("Home", {:controller => "articles", :action => "index"}, :title => "Cliquez pour revenir à l'Home")} &gt; "

if params[:id]
  breadcrumb << link_to("Thématiques", "/tags/", :title => "Cliquez pour voir la liste des thématiques traitées sur le site")
  mytag = Tag.find_by_name(params[:id])
  breadcrumb << " &gt #{mytag.display_name}" 
else
  breadcrumb << "Thématiques"
end
%>

<%= content_tag(:li, breadcrumb)%>